header.header
    nav.nav.nav--tours
        a(href="/").nav__el All tours
    .header__logo
        img(src="/img/logo-white.png" alt="Tourism logo")
    nav.nav.nav--user
        if user
            button.nav__el.log___out Logout
            a(href="/me").nav__el
                img.nav__user-img(src=`/img/users/${user.photo}`)
                span=user.name.split(" ")[0]
        else
            a.nav__el(href="/login") Log in
            a.nav__el.nav__el--cta(href="/signup") Sign up
